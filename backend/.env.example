# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/quickserve
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/quickserve?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/quickserve

# JWT Secret Key (change this in production!)
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Default Admin Credentials (for seeding)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Optional: Email Configuration (for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-email-password

# Optional: WhatsApp Integration
# WHATSAPP_API_KEY=your_whatsapp_api_key
# WHATSAPP_PHONE_NUMBER=your_business_phone_number
